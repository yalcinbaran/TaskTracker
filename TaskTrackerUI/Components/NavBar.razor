@inject NavigationManager _navManager
<MudNavMenu>
    <MudNavLink OnClick="@(() => { _navManager.NavigateTo("/home"); _isTasksMenuExpanded = false; })">Anasayfa</MudNavLink>
    <MudNavLink OnClick="@(() => _isTasksMenuExpanded = !_isTasksMenuExpanded)">Görevler</MudNavLink>
    <MudCollapse Expanded="@_isTasksMenuExpanded">
        <MudNavLink Href="/activetasks" Match="NavLinkMatch.All">
            <MudElement Class="submenu">
                Aktif Görevler
            </MudElement>
        </MudNavLink>
        <MudNavLink Href="/completedtasks" Match="NavLinkMatch.All">
            <MudElement Class="submenu">
                Tamamlanmış Görevler
            </MudElement>
        </MudNavLink>
        <MudNavLink Href="/overduetasks" Match="NavLinkMatch.All">
            <MudElement Class="submenu">
                Süresi Geçmiş Görevler
            </MudElement>
        </MudNavLink>
        <MudNavLink Href="/canceledtasks" Match="NavLinkMatch.All">
            <MudElement Class="submenu">
                İptal Edilen Görevler
            </MudElement>
        </MudNavLink>
        <MudNavLink Href="/addtask">
            <MudElement Class="submenu">
                Görev Ekle
            </MudElement>
        </MudNavLink>
    </MudCollapse>
</MudNavMenu>

<style>
    .submenu{
        margin-left: 20px;
    }
</style>

@code {
    private bool _isTasksMenuExpanded { get; set; } = false;
}
